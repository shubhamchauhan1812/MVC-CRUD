    function GridShow() {

        debugger;
        $.ajax({
            url: 'Employee/EmployeeGridShow',
            type: 'post',
            data: {},
            success: function (data) {
                data = JSON.parse(data);
                $("#tbl").find("tr:gt(0)").remove();
