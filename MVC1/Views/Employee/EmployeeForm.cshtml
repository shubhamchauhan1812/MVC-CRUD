    function Clear() {
        $("#txtname").val("");
        $("#txtcity").val("");
        $("#txtsalary").val("");
        $("#btnsave").val("Save");
        IDDD = 0;
    }



    function DELETE(Id) {
        $.ajax({
            url: 'Employee/EmployeeDelete',
            type: 'post',
            data: { Idd: Id },
            success: function () {
                alert('data deleted !!');
                GridShow();

            },
            error: function () {
                alert('data not deleted !!');
            }
        });
    }

    function EDIT(Id) {
        $.ajax({
            url: 'Employee/EmployeeEdit',
            type: 'post',
            data: { Idd: Id },
            success: function (data) {
                data = JSON.parse(data);
                $("#txtname").val(data[0].Name);
                $("#txtcity").val(data[0].City);
                $("#txtsalary").val(data[0].Salary);
                $("#btnsave").val("Update");
                IDDD = Id;
            },
            error: function () {
                alert('data not edited !!');
            }
            
